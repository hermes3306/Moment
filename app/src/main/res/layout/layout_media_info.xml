<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <EditText
                android:id="@+id/ed_media_memo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:text="Memo" />


            <Spinner
                android:id="@+id/sp_media_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/place" />

            <Spinner
                android:id="@+id/sp_media_grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/grade" />

            <TextView
                android:id="@+id/tv_media_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address" />


            <TextView
                android:id="@+id/tv_media_latitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_media_longitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_media_cr_datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_media_mo_datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_media_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />


        </LinearLayout>

</ScrollView>