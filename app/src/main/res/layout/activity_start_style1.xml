<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Ivory"
    tools:context=".StartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:text="05:20:21"
                android:textAlignment="center"
                android:textColor="#00E5FF"
                android:textSize="45dp" />

            <TextView
                android:id="@+id/tv_start_calory"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="120"

                android:autoSizeMaxTextSize="100sp"
                android:autoSizeMinTextSize="5sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"

                android:textAlignment="center"
                android:textColor="#00E5FF"
                android:textSize="45dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:text="TIME"
                android:textAlignment="center"
                android:textColor="#00E5FF"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Calories"
                android:textAlignment="center"
                android:textColor="#00E5FF"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_start_km"
                android:layout_width="wrap_content"
                android:layout_height="291dp"
                android:layout_gravity="center_horizontal"


                android:text="12.1"
                android:textAlignment="center"
                android:textColor="@color/Coral"
                android:textSize="210dp" />

            <TextView
                android:id="@+id/tv_start_km_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="KM"
                android:textColor="@color/Coral"
                android:textAlignment="center"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_start_cur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:text="0:0"

                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeStepGranularity="2sp"
                android:textAlignment="center"
                android:textColor="#8BC34A"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/tv_start_avg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:text="0:0"

                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeStepGranularity="2sp"

                android:textAlignment="center"
                android:textColor="#00E5FF"
                android:textSize="50dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_weight="1"
                android:text="CURRENT(km/min)"
                android:textAlignment="center"
                android:textColor="#8BC34A"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:text="AVG PACE(km/min)"
                android:textAlignment="center"
                android:textColor="#00E5FF"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/teal_200"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imb_start_camera"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/transparent48"
                android:gravity="center"
                android:onClick="onClick"
                app:srcCompat="@drawable/camw48" />

            <ImageView
                android:id="@+id/iv_start_pause"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="onClick"
                app:srcCompat="@drawable/pausey64" />

            <ImageButton
                android:id="@+id/imb_start_list"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/transparent48"
                android:gravity="center"
                android:onClick="onClick"
                app:srcCompat="@drawable/setw48" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>