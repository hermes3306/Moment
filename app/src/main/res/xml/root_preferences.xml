<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Map">
        <ListPreference
            app:defaultValue="0"
            app:entries="@array/start_screen"
            app:entryValues="@array/start_screen_values"
            app:key="start_screen"
            app:title="Start Screen Type"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="File Type">
        <ListPreference
            app:defaultValue="0"
            app:entries="@array/filetype"
            app:entryValues="@array/filetype_values"
            app:key="filetype"
            app:title="File Type"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Location">
        <SwitchPreferenceCompat
            app:key="NetworkProvider"
            app:title="Enable Network Provider..." />
        <ListPreference
            app:defaultValue="1000"
            app:entries="@array/interval"
            app:entryValues="@array/interval_values"
            app:key="interval"
            app:title="Interval"
            app:useSimpleSummaryProvider="true" />
        <ListPreference
            app:defaultValue="1"
            app:entries="@array/distance"
            app:entryValues="@array/distance_values"
            app:key="distance"
            app:title="Distance"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Runner">
        <EditTextPreference
            app:defaultValue="Jason Park "
            app:key="your_name"
            app:title="Your Name"
            app:useSimpleSummaryProvider="true" />
        <SwitchPreferenceCompat
            app:key="Gender"
            app:title="Female" />
        <EditTextPreference
            app:dependency="your_name"
            appLdefaultValue="175"
            app:key="Height"
            app:title="Height"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:dependency="your_name"
            appLdefaultValue="75"
            app:key="Weight"
            app:title="Weight"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Activity">
        <ListPreference
            app:defaultValue="Running"
            app:entries="@array/activity_types"
            app:entryValues="@array/activity_types"
            app:key="activity_type"
            app:title="Activity Type"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

</PreferenceScreen>